[user]
	name = ichramm
	email = jramirez.uy@gmail.com

[github]
	user = ichramm
	email = jramirez.uy@gmail.com

[core]
	autocrlf = false
	safecrlf = false
  fileMode = true

[merge]
  guitool = kompare
  tool = kompare

[diff]
  tool = kompare

[rebase]  
  autostash = true

[push]
  default = simple

[branch]
	autosetuprebase = always

[color]
	ui = true

[alias]
	df = diff -w
	co = checkout
	ci = commit -v
	cia = commit -av
	st = status
	br = branch
	bra = branch -a
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate
	ll = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate --numstat
	lsd = log --pretty=format:%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate --date=short
	aliases = !git config -l | grep alias | cut -c 7-

