# KDE prefix for git commands
[url "git://anongit.kde.org/"]
	   insteadOf = kde:
[url "ssh://git@git.kde.org/"]
	   pushInsteadOf = kde:
[url "git@git.kde.org:"]
	pushInsteadOf = kde:
[pull]
	rebase = true
